<!DOCTYPE html>
<head>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script> 
</head>
<body>
    Profile page of <%= profile_user.name %> <br>
<%= profile_user.age %> <br>
<%= profile_user.sex %> <br>
<%= profile_user.role %> <br>

<% if(role=='Admin'){%>
    <form action="/profile/ReviewToBeGiven" method="POST">
    <% for(user of users){%>
        <input type="checkbox" name="ReviewToBeGiven" value="<%= user._id%>" ><%= user.name %>
        
        <% }%>
        <input type="hidden" name="profile_user" value="<%= profile_user.id %>">
        <input type="submit" name="submit" value="submit" class="checkboxValue">;
        
    </form>
    
    <% for(reviewGot of profile_user.reviewGot){%>
        <% if(role=='Admin'){%>
        Review By: <strong><%=reviewGot.author.name %> </strong>
            <% } %>
        Cooperation: <%= reviewGot.cooperation %>
        Punctual: <%= reviewGot.punctual %>
        Work: <%= reviewGot.work %>
        Creativity: <%= reviewGot.creativity %>
        adaptability: <%= reviewGot.adaptability %> <br>
        <% if(reviewGot.description!=""){%>
        Description: <%= reviewGot.description %> <br> 
            <% }%>
        
        <% } %>
    <% } %>
    <% if(role=='Admin'){%>
        Update Review: <a href="/reviewPage/<%= profile_user.id%>"><%=profile_user.name%></a> 
        <% } %>
    Add Review : <a href="/reviewPage/<%=profile_user.id%>"><%=profile_user.name%></a>
    <% if(role=='Admin'){%>
    <form action="/profileUpdate" method="POST">
        Update name: <input type="text" name="name" value="<%=profile_user.name%>">
        Update Email: <input type="text" name="email" value="<%=profile_user.email%>">
        Update Age: <input type="text" name="age" value="<%=profile_user.age%>">
        Update Sex: <input type="text" name="sex" value="<%=profile_user.sex%>">
        <input type="hidden" name="profile_user" value="<%= profile_user._id %>">
        <input type="submit" value="submit">
    </form>
    <% } %>
    
    
</body>

    
    
    </html>
